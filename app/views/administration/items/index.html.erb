<% if flash[:notice] %>
	 <div class="notice"><%= flash[:notice] %></div>
 <% end %>
<main class="content">
	<div class="container-fluid p-0">

		<h1 class="h3 mb-3">Items</h1>

		<div class="row">
			<div class="col-12">

				<div class="card">
					<div class="table-responsive">
						<table class="table table-striped table-hover">
							<thead>
								<tr>
									<th>Prix de d√©part</th>
									<th>Pourcentage de remise</th>
									<th>Prix</th>
									<th></th>
								</tr>
							</thead>
							<tbody>
							<% @items.order(:id).each do |item|%>
							<%= form_for item, :url => administration_item_path(item.id), :html => { :method => :put} do |f|%>
									<tr>
										<td><%= item.original_price.round(2)%></td>
										<td><%= f.number_field :discount_percentage %></td>
										<td><%= item.price.round(2)%></td>
										<td><%= f.submit "Modifier", class: "btn btn-primary"%></td>
									</tr>
									<% end %>
							<% end %>
							</tbody>
						</table>
					</div>
				</div>

			</div>
		</div>

	</div>
</main>
